<Window
  x:Class="PhotoBooth.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:PhotoBooth"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Demo App"
  Width="800"
  Height="450"
  d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel,
                                   IsDesignTimeCreatable=False}"
  Style="{StaticResource MaterialDesignWindow}"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Menu>
      <MenuItem Header="_File">
        <MenuItem Command="{Binding StartCameraCommand}" Header="_Start" />
        <Separator />
        <MenuItem Command="{x:Static ApplicationCommands.Close}" Header="E_xit" />
      </MenuItem>
    </Menu>

    <Image Grid.Row="1" Source="{Binding Image}" />

  </Grid>
</Window>
